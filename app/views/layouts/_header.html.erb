<header id="header" class="logo header">
  <div id="logo" class="logo">
    <span>
      <%= link_to "/" do %>
        <i class="fa fa-calendar-check-o" aria-hidden="true"></i>
      <% end %>
    </span>
  </div>
  <ul class="right header-menu">
    <% if user_signed_in? %>
      <li class="avatar-box">
        <a class="avatar header-nav-item dropdown" href="javascript:void(0)">
          <%= image_tag current_user.avatar_url,
            alt: current_user.name, class: "img-circle" %>
          <span class="dropdown-caret"></span>
        </a>
        <div class= "sub-menu sub-menu-hidden">
          <div class="dropdown-header header-nav-current-user css-truncate">
            Signed in as <strong class="css-truncate-target"><%= current_user.name %></strong>
          </div>
          <div class="dropdown-divider"></div>
          <div class="sub-setting">
            <%= link_to current_user do %>
              <i class="fa fa-cog" aria-hidden="true"></i> <%= t(".profile_setting") %>
            <% end %>
          </div>
          <div class="dropdown-divider"></div>
          <div class="sub-setting">
            <%= link_to destroy_user_session_path, method: :delete do %>
             <i class="fa fa-sign-in" aria-hidden="true"></i> <%= t("session.link.sign_out") %>
            <% end %>
          </div>
          <div class="top-prong">
            <div class="prong-dk"></div>
            <div class="prong-lt"></div>
          </div>
        </div>
      </li>
      <li class="create-new-object">
        <a class="header-nav-item dropdown">
          <svg aria-hidden="true" class="octicon octicon-plus float-left" height="16" version="1.1" viewBox="0 0 12 16" width="12">
            <path fill-rule="evenodd" d="M12 9H7v5H5V9H0V7h5V2h2v5h5z"></path>
          </svg>
          <span class="dropdown-caret"></span>
        </a>

        <div class= "sub-menu sub-menu-hidden">
          <div class="sub-setting">
            <%= link_to new_event_path do %>
              <i class="fa fa-plus" aria-hidden="true"></i> <%= t(".new_event") %>
            <% end %>
          </div>
          <div class="sub-setting">
            <%= link_to new_organization_path do %>
              <i class="fa fa-plus" aria-hidden="true"></i> <%= t(".new_organization") %>
            <% end %>
          </div>
          <div class="sub-setting">
            <%= link_to new_calendar_path do %>
              <i class="fa fa-plus" aria-hidden="true"></i> <%= t(".new_calendar") %>
            <% end %>
          </div>
          <div class="top-prong">
            <div class="prong-dk"></div>
            <div class="prong-lt"></div>
          </div>
        </div>
      </li>

      <li>
        <%= link_to search_calendars_path,
          title: t(".room_search"),
          class: "header-nav-item header-item-link" do %>
          <i class="fa fa-search fa-1-5" aria-hidden="true"></i>
        <% end %>
      </li>
    <% else %>
      <li class="signup">
        <%= link_to "javascript:void(0)", class: "header-item-link header-nav-item" do %>
          <i class="fa fa-user-plus" aria-hidden="true"></i> <%= t("devise.registrations.sign_up") %>
        <% end %>
      </li>
      <li class="login">
        <%= link_to "javascript:void(0)", class: "header-item-link header-nav-item" do %>
          <i class="fa fa-sign-in" aria-hidden="true"></i> <%= t(".log_in") %>
        <% end %>
      </li>
    <% end %>
  </ul>
</header>
